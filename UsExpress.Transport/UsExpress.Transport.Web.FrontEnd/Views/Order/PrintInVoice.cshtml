@model UsExpress.Transport.Lib.Business.Models.DBContext.UsTransport.tblPackageInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintInVoice</title>
</head>
<body>
    <div marginwidth="0">
        <table border="0" cellpadding="0" cellspacing="0" style="margin:0px;padding:0px;width:100%;margin:0;padding:0;font-size:12px;font-family:arial,helvetica,sans-serif; border-bottom:1px solid #d3d3d3">
            <tbody>
                <tr>
                    <td align="center" style="padding:20px 0;margin:0">
                        <table style="border-collapse:collapse;color:#333;font-family:arial,helvetica,sans-serif;font-size:12px;line-height:17px;margin:0 auto;padding:0;width:700px">
                            <tbody style="margin:0;padding:0">
                                <tr style="margin:0;padding:0">
                                    <td style="margin:0;padding:20px 0;vertical-align:middle">
                                        <table align="center" style="background:#fff;border-collapse:collapse;margin:0;padding:0;width:100%">
                                            <tbody style="margin:0;padding:0">
                                                <tr style="margin:0;padding:0">
                                                    <td style="margin:0;padding:10px">
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">
                                                                <tr>
                                                                    <td align="left" style="padding:20px 0;margin:0;font-weight:700">
                                                                        @Model.Code
                                                                    </td>
                                                                    <td align="right" style="padding:20px 0;margin:0;font-weight:600">
                                                                        @Model.CreateDate
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">
                                                                <tr>
                                                                    <td align="center" colspan="2" style="padding:20px 0;margin:0;font-weight:700;font-size:20px"> Reciept </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">

                                                                <tr>
                                                                    <td align="left" style="padding:20px;margin:0;border:1px solid #d2d2d2">
                                                                        <div style="text-align:left">
                                                                            Sender:  @ViewBag.Order.NameSender
                                                                            <br /> Address: @ViewBag.Order.Address1 ?? @ViewBag.Order.Address2
                                                                            <br /> Zip: @ViewBag.Order.Zip
                                                                            <br /> Phone:  @ViewBag.Order.Phone
                                                                        </div>
                                                                    </td>
                                                                    <td align="left" style="padding:20px;margin:0;border:1px solid #d2d2d2">                                                                        
                                                                        Sender:  @ViewBag.Order.NameRecipient 
                                                                        <br /> Address: @ViewBag.Order.Address1Recipient 
                                                                        <br/> Phone:  @ViewBag.Order.PhoneRecipient
                                                                    </td>
                                                                </tr>

                                                            </tbody>
                                                        </table>
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">

                                                                <tr>
                                                                    <td align="center" style="padding:20px 0;margin:0;font-weight:700;font-size:20px">
                                                                        Package Detail
                                                                    </td>
                                                                </tr>

                                                            </tbody>
                                                        </table>
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">

                                                                <tr>
                                                                    <td align="center" style="padding:20px 0;margin:0;border:1px solid #d2d2d2">
                                                                        Weight (lbs): @Model.Weight
                                                                    </td>
                                                                    <td align="center" style="padding:20px 0;margin:0;border:1px solid #d2d2d2">
                                                                        H x W x D: @Model.Height x @Model.Weight x @Model.Depth
                                                                    </td>
                                                                    <td align="center" style="padding:20px 0;margin:0;border:1px solid #d2d2d2">
                                                                        Total Fee ($): : @Model.Fee
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <table style="border-collapse:collapse;margin:0;padding:0;width:100%">
                                                            <tbody style="margin:0;padding:0">

                                                                <tr>
                                                                    <td align="center" style="padding:20px 0;margin:0">
                                                                        <table style="border-collapse:collapse;color:#333;font-family:arial,helvetica,sans-serif;font-size:12px;line-height:17px;margin:0 auto;padding:0;width:700px;border:1px solid #d3d3d3">
                                                                            <thead style="margin:0;padding:0; background: #d3d3d3;">
                                                                                <tr style="margin:0;padding:0">
                                                                                    <th style="border:1px solid #d3d3d3">Desciption</th>
                                                                                    <th style="border:1px solid #d3d3d3">Quantity</th>
                                                                                    <th style="border:1px solid #d3d3d3">value ($)</th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody style="margin:0;padding:0">
                                                                                @{var itemInPackage = "";
                                                                                foreach (var item in Model.tblItemInPackages)
                                                                                {
                                                                                itemInPackage += "<tr style='margin:0;padding:0'><td style='border: 1px solid #d3d3d3;padding:5px'>" + item.Description + "</td><td style='border: 1px solid #d3d3d3;padding:5px'>" + item.Quantity + "</td><td style='border: 1px solid #d3d3d3;padding:5px'>" + item.Value + "</td></tr>";
                                                                                }
                                                                                }
                                                                                @Html.Raw(itemInPackage);
                                                                            </tbody>
                                                                        </table>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script>
        window.print();
    </script>
</body>
</html>
